Brute Force:
class Solution {
    public int missingNumber(int[] nums) {
        int n=nums.length;
        Arrays.sort(nums);
        for(int i=0;i<n;i++){
            if(nums[i]!=i) return i;
        }
        return n;
    }
}
better:
class Solution {
    public int missingNumber(int[] nums) {
        int n=nums.length;
        int ans[]=new int [n+1];
        for(int num:nums){
            ans[num]=1;
        }
        for(int i=0;i<n+1;i++){
            if(ans[i]==0) return i;
        }
        return n;
    }
}
Optimaze:
class Solution {
    public int missingNumber(int[] nums) {
        int n=nums.length;
        int sum=0;
        for(int num:nums){
            sum+=num;
        }
        int total=n*(n+1)/2;
        return total-sum;
    }      
}
